@using MyRecipes.Common
@using MyRecipes.Web.ViewModels.Home
@model IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/highchartsDemo/index.css"/>
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <div class="col-md-4 offset-md-4">
        <p>We Have:</p>
        <ul class="list-group">
            <li class="list-group-item bg-info">Recipes: @Model.RecipesCount</li>
            <li class="list-group-item bg-light">Categories: @Model.CategoriesCount</li>
            <li class="list-group-item bg-info">Images: @Model.ImagesCount</li>
            <li class="list-group-item bg-light">Ingredients: @Model.IngredientsCount</li>
        </ul>
    </div>
</div>